<div class="row">
    <div class="col-sm-12">
        <div class="card-box table-responsive">
            <div class="dropdown pull-right">
                <a href="#" class="dropdown-toggle card-drop" data-toggle="dropdown" aria-expanded="false">
                    <i class="zmdi zmdi-more-vert"></i>
                </a>
                <ul class="dropdown-menu" role="menu">
                    <li><a href="#" data-toggle="modal" data-target="#product-adding-modal">Add</a></li>
                </ul>
            </div>

            <h4 class="header-title m-t-0 m-b-30">List of Products</h4>

            <div id="datatable-buttons_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                <table id="datatable-buttons" class="table table-striped table-bordered dataTable no-footer dtr-inline collapsed" role="grid" aria-describedby="datatable-buttons_info">
                    <thead>
                        <tr role="row">
                            <th class="sorting_asc" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Id" style="width: 20px;">Id</th>
                            <th class="sorting_" tabindex="1" aria-controls="datatable-buttons" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name" style="width: 450px;">Name</th>
                            <th class="sorting" tabindex="2" aria-controls="datatable-buttons" rowspan="1" colspan="1" aria-label="NumberOfProduct" style="width: 100px;">NumberOfProduct</th>
                            <th class="sorting" tabindex="3" aria-controls="datatable-buttons" rowspan="1" colspan="1" aria-label="Price" style="width: 200px;">Price</th>
                            <th class="sorting" tabindex="4" aria-controls="datatable-buttons" rowspan="1" colspan="1" aria-label="Description" style="width: 175px">Description</th>
                            <th rowspan="1" colspan="1" style="width: 50px; display: none" ;>&</th>
                            <th rowspan="1" colspan="1" style="width: 50px; display: none" ;>&</th>
                            <th rowspan="1" colspan="1" style="width: 50px; display: none" ;>&</th>
                            <th rowspan="1" colspan="1" style="width: 50px; display: none" ;>&</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr role="row" class="odd">
                                <td class="sorting_1" tabindex="0">@product.Id</td>
                                <td>@product.Name</td>
                                <td>@product.NumberOfProduct</td>
                                <td>@product.Price</td>
                                <td>@product.Description</td>
                                <td align="center"><button class="btn btn-warning updateBtn" data-product-id="@product.Id">Edit</button></td>
                                <td align="center"><button class="btn btn-danger deleteBtn" data-product-id="@product.Id" id="handleDeleteProduct">Delete</button></td>
                                <td align="center"><button class="btn btn-success detailsBtn" data-product-id="@product.Id">Details</button></td>
                                <td align="center"><button class="btn btn-info detailBtn" data-product-id="@product.Id">Detail</button></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div id="product-adding-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title"><i class="fa fa-plus-circle"></i> Add Product</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="addName" class="control-label">Name</label>
                                <input type="text" class="form-control" id="addName">
                            </div>
                            <div class="form-group">
                            <label for="addNumberOfProduct" class="control-label">Number Of Product</label>
                            <input type="text" class="form-control" id="addNumberOfProduct">

                            </div>
                            <div class="form-group">
                            <label for="addPrice" class="control-label">Price</label>
                            <input type="text" class="form-control" id="addPrice">

                            </div>
                            <div class="form-group">
                                <label for="addDescription" class="control-label">Description</label>
                                <input type="text" class="form-control" id="addDescription">

                            </div>

                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">Close</button>
                    <button type="submit" id="submitAddForm" class="btn btn-purple waves-effect waves-light">Save changes</button>
                </div>
            </div>
    </div>
</div>

