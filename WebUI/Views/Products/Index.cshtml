    $('.deleteBtn').click(function () {
        var id = $(this).data("product-id");
        swal({
            title: "Silmek istediğinizden emin misiniz?",
            text: "Silinen kayıtlar bir daha listelenmez!",
            type: "warning",
            showCancelButton: true,
            cancelButtonText: "Iptal",
            confirmButtonClass: "btn-warning",
            confirmButtonText: "Evet, silebilirsin!",
            closeOnConfirm: false
        }, function (isConfirm) {
            if (isConfirm) {
                $.ajax({
                    url: "@Url.Action("Delete","Products")",
                    method: "POST",
                    dataType: "json",
                    data: { products: { id } },
                    success: function (response) {
                        if (response.success) {
                            swal("Başarılı!", "Ürün başarıyla silindi.", "success");
                            location.reload();
                        } else {
                            swal("Hata!", response.message, "error");
                        }
                    }
                });
            } else {
                swal("İptal Edildi", "Ürün silinmedi.", "info");
            }
        });
    });

    $('#submitEditForm').click(function () {
        var reqData = {
            name: $('#editName').val(),
            numberOfProduct: $('#editNumberOfProduct').val(),
            price: $('#editPrice').val(),
            description: $('#editDescription').val(),
            id: $('#editId').val(),
        }
        $.ajax({
            url: "@Url.Action("Update","Products")",
            method: "POST",
            dataType: "json",
            data: reqData,
            success: function (response) {
                if (response.success) {
                    alert(response.message);
                    $('#product-updating-modal').modal("hide");
                } else {
                    alert(response.message);
                }
            }
        });
    });

    $('.updateBtn').click(function () {
        var id = $(this).data("product-id");
        $('#product-updating-modal').modal("show");
        $.ajax({
            url: "@Url.Action("GetById","Products")",
            method: "POST",
            dataType: "json",
            data: { productId: id },
            success: function (response) {
                console.log(response)
                if (response.success) {

                    $('#editName').val(response.data.name);
                    $('#editNumberOfProduct').val(response.data.numberOfProduct);
                    $('#editPrice').val(response.data.price);
                    $('#editDescription').val(response.data.description);
                    $('#editId').val(id);

                } else {
                    alert(response.message)
                }

            }
        });

    });

    $(document).on("click", ".detailBtn", function () {
        var id = $(this).data("product-id");
        $.ajax({
            url: "@Url.Action("GetById","Products")",
            method: "POST",
            dataType: "json",
            data: { productId: id },
            success: function (response) {
                $("#editId").val(response.data.id);
                $("#editName").val(response.data.name);
                $("#editNumberOfProduct").val(response.data.numberOfProduct);
                $("#editPrice").val(response.data.price);
                $("#editDescription").val(response.data.description);
                $("#editCreatedDate").val(response.data.createdDate);
                $("#editCreatedUserId").val(response.data.createdUserId);
                $("#editIsActive").val(response.data.isActive);
                $("#editIsDeleted").val(response.data.isDeleted);
                $("#product-detail-modal").modal("show");
            }
        });
    });

    $(document).on("click", ".detailsBtn", function () {
        $('#product-details-modal').modal("show");
        var id = $(this).data("product-id");
        $.ajax({
            url: "@Url.Action("GetById", "Products")",
            method: "POST",
            dataType: "json",
            data: { productId: id },
            success: function (response) {
                var tableHtml = "<table class='table table-ordered'>";
                tableHtml += "<tr><td>" + response.data.id + 
                             "</td><td>" + response.data.name + 
                             "</td><td>" + response.data.numberOfProduct + 
                             "</td><td>" + response.data.price +
                            "</td><td>" + response.data.description +
                             "</td><td>" + response.data.createdDate +
                            "</td><td>" + response.data.createdUserId +
                             "</td><td>" + response.data.isActive +
                             "</td><td>" + response.data.isDeleted +
                            "</td></tr>";
                tableHtml += "</table>";
                $("#product_list").html(tableHtml);
            }
        });
    });
</script>