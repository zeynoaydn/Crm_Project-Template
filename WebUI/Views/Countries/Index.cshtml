<div class="row">
    <div class="col-sm-12">
        <div class="card-box table-responsive">
            <div class="dropdown pull-right">
                <a href="#" class="dropdown-toggle card-drop" data-toggle="dropdown" aria-expanded="false">
                    <i class="zmdi zmdi-more-vert"></i>
                </a>
                <ul class="dropdown-menu" role="menu">
                    <li><a href="#" data-toggle="modal" data-target="#product-adding-modal">Add</a></li>
                </ul>
            </div>

            <h4 class="header-title m-t-0 m-b-30">List of Countries</h4>

            <div id="datatable-buttons_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                <table id="datatable-buttons" class="table table-striped table-bordered dataTable no-footer dtr-inline collapsed" role="grid" aria-describedby="datatable-buttons_info">
                    <thead>
                        <tr role="row">
                            <th class="sorting_asc" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Id" style="width: 20px;">Id</th>
                            <th class="sorting_asc" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" aria-sort="ascending" aria-label="CountryName" style="width: 20px;">Country Name</th>
                            <th rowspan="1" colspan="1" style="width: 50px; display: none" ;>&</th>
                            <th rowspan="1" colspan="1" style="width: 50px; display: none" ;>&</th>
                            <th rowspan="1" colspan="1" style="width: 50px; display: none" ;>&</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var country in Model)
                        {
                            <tr role="row" class="odd">
                                <td class="sorting_1" tabindex="0">@country.Id</td>
                                <td>@country.CountryName</td>
                                <td align="center"><button class="btn btn-warning updateBtn" data-country-id="@country.Id">Edit</button></td>
                                <td align="center"><button class="btn btn-danger deleteBtn" data-country-id="@country.Id" id="handleDeleteProduct">Delete</button></td>
                                <td align="center"><button class="btn btn-success detailBtn" data-country-id="@country.Id" id="handleGetProduct">Detail</button></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div><!-- end col -->
</div>

<div id="product-adding-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title"><i class="fa fa-plus-circle"></i> Add Country</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="addName" class="control-label">Country Name</label>
                            <input type="text" class="form-control" id="addName">
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">Close</button>
                <button type="submit" id="submitAddForm" class="btn btn-purple waves-effect waves-light">Save changes</button>
            </div>
        </div>
    </div>
</div><!-- /.modal -->

<div id="product-updating-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title"><i class="fa fa-plus-circle"></i> Update Country</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="editName" class="control-label">Country Name</label>
                            <input type="text" id="editName" class="form-control">
                        </div>
                        <input type="hidden" id="editId" />

                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-purple waves-effect waves-light" id="submitEditForm">Save changes</button>
            </div>
        </div>
    </div>
</div><!-- /.modal -->

<div id="product-details-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h4 class="modal-title"><i class="fa fa-plus-circle"></i>Product Details</h4>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="table-responsive" style="max-width:100%;overflow-x:auto">
                        @* yana sürüklenen scrooll çirkin bir yapı ://*@
                        <div id="datatable-buttons_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                            <table id="datatable-buttons" class="table table-striped table-bordered dataTable no-footer dtr-inline collapsed" role="grid" aria-describedby="datatable-buttons_info">
                                <thead>
                                    <tr role="row">
                                        <th class="sorting_asc" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" aria-sort="ascending">Id</th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" aria-sort="ascending">Country Name</th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" aria-sort="ascending">Created Date</th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" aria-sort="ascending">Created User Id</th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" aria-sort="ascending">Is Active</th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" aria-sort="ascending">Is Deleted</th>
                                    </tr>
                                </thead>
                                <tbody id="product_list"></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">Close</button>
        </div>
    </div>
</div>
</div>


<script>
    $('#submitAddForm').click(function () {
        var reqData = {
            countryName: $('#addName').val(),
        };
        $.ajax({
            url: "@Url.Action("Add","Countries")",
            method: "POST",
            dataType: "json",
            data: reqData,
            success: function (response) {
                if (response.success) {
                    alert(response.message);
                } else {
                    alert(response.message);
                }
            }
        });
    });

    $('.deleteBtn').click(function () {
        var id = $(this).data("country-id");
        swal({
            title: "Silmek istediğinizden emin misiniz?",
            text: "Silinen kayıtlar bir daha listelenmez!",
            type: "warning",
            showCancelButton: true,
            cancelButtonText: "Iptal",
            confirmButtonClass: "btn-warning",
            confirmButtonText: "Evet, silebilirsin!",
            closeOnConfirm: false
        }, function (isConfirm) {
            if (isConfirm) {
                $.ajax({
                    url: "@Url.Action("Delete","Countries")",
                    method: "POST",
                    dataType: "json",
                    data: { countries: { id } },
                    success: function (response) {
                        if (response.success) {
                            swal("Başarılı!", "Ürün başarıyla silindi.", "success");
                            location.reload();
                        } else {
                            swal("Hata!", response.message, "error");
                        }
                    }
                });
            } else {
                swal("İptal Edildi", "Ürün silinmedi.", "info");
            }
        });
    });

    $('#submitEditForm').click(function () {
        var reqData = {
            countryName: $('#editName').val(),
            id: $('#editId').val(),
        }
        $.ajax({
            url: "@Url.Action("Update","Countries")",
            method: "POST",
            dataType: "json",
            data: reqData,
            success: function (response) {
                if (response.success) {
                    alert(response.message);
                    $('#product-updating-modal').modal("hide");
                } else {
                    alert(response.message);
                }
            }
        });
    });

    $('.updateBtn').click(function () {
        var id = $(this).data("country-id");
        $('#product-updating-modal').modal("show");

        $.ajax({
            url: "@Url.Action("GetById","Countries")",
            method: "POST",
            dataType: "json",
            data: { countryId: id },
            success: function (response) {
                console.log(response)
                if (response.success) {
                    $('#editName').val(response.data.countryName);
                    $('#editId').val(id);

                } else {
                    alert(response.message)
                }

            }
        });

    });

    $(document).on("click", ".detailBtn", function () {
        $('#product-details-modal').modal("show");
        var id = $(this).data("country-id");
        $.ajax({
            url: "@Url.Action("GetById", "Countries")",
            method: "POST",
            dataType: "json",
            data: { countryId: id },
            success: function (response) {
                var tableHtml = "<table class='table table-ordered'>";
                tableHtml += "<tr><td>" + response.data.id +
                    "</td><td>" + response.data.countryName +
                    "</td><td>" + response.data.createdDate +
                    "</td><td>" + response.data.createdUserId +
                    "</td><td>" + response.data.isActive +
                    "</td><td>" + response.data.isDeleted +
                    "</td></tr>";
                tableHtml += "</table>";
                $("#product_list").html(tableHtml);
            }
        });
    });
</script>